
<div class="col-md-4">
    <div class="card mb-3">
        <img class="card-img-top" src="@Model.ImageUrl" alt="Product Image">
        <div class="card-body text-center">
            <h4>@Model.Title</h4>

            <h6>Address: <b>@Model.Address</b></h6>
            <h6>
                Price Per Month:
                <b>@($"{Model.PricePerMonth:f2}") BGN</b>
            </h6>
            
            <br />
            <a asp-controller="House" asp-action="Details" asp-route-id="@Model.Id"
               class="btn btn-success">Details</a>
            
        </div>
    </div>
</div>